<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="2dp"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="@color/colorSurface"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/black_12"
    app:strokeWidth="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/contenedorHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/white">

            <ImageView
                android:id="@+id/imagen_pokemon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:adjustViewBounds="true" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/contenedorDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/contenedorHeader"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/txtName"
                style="@style/labels_text_small"
                android:lines="2"
                android:text="Nombre" />

            <TextView
                android:id="@+id/txtId"
                style="@style/labels_text_accent_small_bold"
                android:lines="1"
                android:paddingBottom="8dp"
                android:text="Id" />
        </LinearLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>